</head>

<body>
  <div class="todo-container">
    <h2>To-Do List</h2>
    <div class="todo">
      <form action="/" method="POST" class="todo-header">
        <input type="text" name="title" id="title"><label for="title">Título</label>
        <input type="text" name="details" id="details"><label for="details">Conteúdo</label>
        <button type="submit"><span class="fas fa-plus"></span></button>
      </form>
      <ul class="todo-list">
        <li class="todo-list-item">
          <% tasks && tasks.forEach(task => { %>
            <li><h4><%= task.title %></h4><p><%= task.details %></p></li>
